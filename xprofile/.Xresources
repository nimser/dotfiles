!! FIXME DEPRECATED: urxvt isn't used anymore
URxvt.scrollBar: false

!! HiDPI settings. Disable if not on a Retina/HiDPI screen
!!Xft.dpi: 192
!!Xft.autohint: 0
!!Xft.lcdfilter:  lcddefault
!!Xft.hintstyle:  hintfull
!!Xft.hinting: 1
!!Xft.antialias: 1
!!Xft.rgba: rgb

Xcursor.theme: Vanilla-DMZ
Xcursor.size: 16

!! Prefered fonts: Hack, PragmataPro
!! To know what fonts provide a glyph use `gucharmap`
!! FIXME DEPRECATED: urxvt isn't used anymore
URxvt.font:                xft:Hack Nerd Font:size=11
URxvt.boldFont:            xft:Hack Nerd Font:size=11:bold
URxvt.italicFont:          xft:Hack Nerd Font:size=11:italic
URxvt.boldItalicFont:      xft:Hack Nerd Font:size=11:bold:italic
URxvt.letterSpace:         -1

URxvt.internalBorder:      0
URxvt.externalBorder:      0

URxvt*fading:              30

URxvt.perl-ext-common:     default,matcher,resize-font

!! Adjust terminal font size
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger:  C-Up

!! Term output and scrolling
URxvt*scrollTtyOutput:     false
URxvt*scrollWithBuffer:    true
URxvt*scrollTtyKeypress:   true

URxvt.url-launcher:        /usr/bin/chromium
URxvt.keysym.M-Delete:     perl:matcher:list
URxvt.matcher.button:      1
URxvt.colorUL:             #7780a1

